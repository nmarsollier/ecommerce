{
    "name": "microservicios-image",
    "version": "0.1.0",
    "description": "Server de Imagenes",
    "repository": {
        "type": "git",
        "url": "https://github.com/nmarsollier/2018_microservicios.git"
    },
    "author": "Nestor Marsollier",
    "license": "MIT",
    "scripts": {
        "start": "npm run build && npm run watch",
        "build": "npm run build-ts && npm run tslint && npm run apidoc",
        "serve": "node dist/server.js",
        "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\"  \"npm run watch-ts\" \"nodemon dist/server.js\"",
        "build-ts": "tsc",
        "watch-ts": "tsc -w",
        "tslint": "tslint -c tslint.json -p tsconfig.json",
        "apidoc": "./node_modules/.bin/apidoc -i src -o ./dist/public"
    },
    "apidoc": {
        "title": "Microservicio de Imagenes",
        "url": ""
    },
    "dependencies": {
        "body-parser": "^1.18.2",
        "compression": "^1.7.2",
        "dotenv": "^5.0.0",
        "typed-rest-client": "1.0.7",
        "express": "^4.16.2",
        "express-validator": "^4.2.0",
        "escape-html": "^1.0.3",
        "uuid": "^3.2.1",
        "ioredis": "^3.2.2",
        "node-cache": "^4.1.1",
        "morgan": "^1.9.0",
        "helmet": "^3.11.0",
        "chalk": "^2.3.1",
        "cors": "^2.8.4",
        "amqplib": "0.5.2",
        "jimp": "0.2.28"
    },
    "devDependencies": {
        "@types/body-parser": "^1.16.8",
        "@types/dotenv": "^4.0.2",
        "@types/express": "^4.11.1",
        "@types/jest": "^21.1.3",
        "@types/uuid": "^3.4.3",
        "@types/ioredis": "^3.2.5",
        "@types/escape-html": "^0.0.20",
        "@types/node-cache": "^4.1.1",
        "@types/morgan": "^1.7.35",
        "@types/node": "^8.9.4",
        "@types/helmet": "^0.0.37",
        "@types/cors": "^2.8.3",
        "@types/compression": "^0.0.35",
        "@types/amqplib": "0.5.7",
        "apidoc": "0.17.6",
        "concurrently": "^3.5.1",
        "tslint": "^5.9.1",
        "nodemon": "^1.15.1",
        "typescript": "^2.7.2",
        "depcheck": "^0.6.8"
    }
}
