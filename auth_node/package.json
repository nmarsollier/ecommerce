    },
    "author": "Nestor Marsollier",
    "license": "MIT",
    "scripts": {
        "start": "npm run build && npm run watch",
        "build": "npm run build-ts && npm run tslint && npm run apidoc && npm run apidocmd",
        "serve": "node dist/server.js",
        "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\"  \"npm run watch-ts\" \"nodemon dist/server.js\"",
        "build-ts": "tsc",
        "watch-ts": "tsc -w",
        "tslint": "tslint -c tslint.json -p tsconfig.json",
        "apidoc": "./node_modules/.bin/apidoc -i src -o ./dist/public",
        "apidocmd": "./node_modules/.bin/apidoc-markdown2 -p ./dist/public -o README-API.md",
        "test": "jest --coverage --verbose"
    },
    "dependencies": {
        "amqplib": "0.5.5",
        "body-parser": "1.19.0",
        "compression": "1.7.4",
        "connect-mongo": "3.0.0",
        "cors": "2.8.5",
        "dotenv": "8.0.0",
        "escape-html": "1.0.3",
        "express": "4.17.1",
        "helmet": "3.20.0",
        "jsonwebtoken": "8.5.1",
        "mongoose": "5.9.9",
        "morgan": "1.9.1",
        "node-cache": "4.2.1",
        "passport": "0.4.0",
        "passport-jwt": "4.0.0",
        "winston": "3.2.1"
    },
    "devDependencies": {
        "@types/body-parser": "1.17.0",
        "@types/connect-mongo": "0.0.43",
        "@types/dotenv": "6.1.1",
        "@types/express": "4.17.0",
        "@types/mongodb": "3.1.32",
        "@types/mongoose": "5.5.12",
        "@types/escape-html": "0.0.20",
        "@types/node-cache": "4.1.3",
        "@types/morgan": "1.7.36",
        "@types/node": "12.7.1",
        "@types/passport": "1.0.0",
        "@types/passport-jwt": "3.0.1",
        "@types/passport-strategy": "0.2.35",
        "@types/helmet": "0.0.43",
        "@types/cors": "2.8.5",
        "@types/compression": "1.0.0",
        "@types/jsonwebtoken": "8.3.3",
        "@types/uuid": "3.4.5",
        "@types/ioredis": "4.0.14",
        "@types/jest": "24.0.17",
        "@types/winston": "2.4.4",
        "@types/amqplib": "0.5.13",
        "ts-jest": "24.0.2",
        "jest": "24.8.0",
        "node-mocks-http": "1.7.6",
        "chai": "4.2.0",
        "apidoc": "0.17.7",
