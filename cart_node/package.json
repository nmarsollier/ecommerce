{
    "name": "cart-service",
    "version": "0.1.0",
    "description": "Server de Carrito",
    "repository": {
        "type": "git",
        "url": "https://github.com/nmarsollier/2018_microservicios.git"
    },
    "author": "Nestor Marsollier",
    "license": "MIT",
    "scripts": {
        "start": "npm run build && npm run watch",
        "build": "npm run build-ts && npm run tslint && npm run apidoc && npm run apidocmd",
        "serve": "node dist/server.js",
        "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\"  \"npm run watch-ts\" \"nodemon dist/server.js\"",
        "build-ts": "tsc",
        "watch-ts": "tsc -w",
        "tslint": "tslint -c tslint.json -p tsconfig.json",
        "apidoc": "./node_modules/.bin/apidoc -i src -o ./dist/public",
        "apidocmd": "./node_modules/.bin/apidoc-markdown2 -p ./dist/public -o README-API.md"
    },
    "dependencies": {
        "body-parser": "1.19.0",
        "compression": "1.7.4",
        "connect-mongo": "3.0.0",
        "dotenv": "8.0.0",
        "express": "4.17.1",
        "typed-rest-client": "1.5.0",
        "escape-html": "1.0.3",
        "mongoose": "5.7.7",
        "node-cache": "4.2.1",
        "morgan": "1.9.1",
        "winston": "3.2.1",
        "helmet": "3.20.0",
        "cors": "2.8.5",
        "amqplib": "0.5.5",
        "jimp": "0.6.4",
        "async": "3.1.0"
    },
    "devDependencies": {
        "@types/body-parser": "1.17.0",
        "@types/connect-mongo": "0.0.43",
        "@types/dotenv": "6.1.1",
        "@types/express": "4.17.0",
        "@types/jest": "24.0.17",
        "@types/mongodb": "3.1.32",
        "@types/mongoose": "5.5.12",
        "@types/escape-html": "0.0.20",
        "@types/node-cache": "4.1.3",
        "@types/morgan": "1.7.36",
        "@types/node": "12.7.1",
        "@types/helmet": "0.0.43",
        "@types/cors": "2.8.5",
        "@types/compression": "1.0.0",
        "@types/winston": "2.4.4",
        "@types/amqplib": "0.5.13",
        "@types/async": "3.0.1",
        "apidoc": "0.17.7",
        "apidoc-markdown2": "0.3.7",
        "concurrently": "4.1.1",
        "tslint": "5.18.0",
        "nodemon": "1.19.1",
        "typescript": "3.5.3"
    }
}
